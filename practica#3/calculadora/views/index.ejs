<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Calculadora Web</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 40px; }
    .calc-container { max-width: 400px; margin: auto; padding: 2em; border: 1px solid #ccc; border-radius: 8px; }
    input, select, button { margin: 0.5em 0; width: 100%; padding: 0.5em; }
    .result { margin-top: 1em; font-weight: bold; }
  </style>
</head>
<body>
  <div class="calc-container">
    <h2>Calculadora Web</h2>
    <form method="POST" action="/calcular">
      <label for="a">Valor A:</label>
      <input type="number" name="numero1" id="numero1" required step="any">
      <label for="b">Valor B:</label>
      <input type="number" name="numero2" id="numero2" required step="any">
      <label for="operacion">Operaci√≥n:</label>
      <select name="operacion" id="operacion">
        <option value="sumar">Sumar</option>
        <option value="restar">Restar</option>
        <option value="multiplicar">Multiplicar</option>
        <option value="dividir">Dividir</option>
      </select>
      <button type="submit">Calcular</button>
    </form>
    <% if (typeof resultado !== 'undefined') { %>
      <div class="result">Resultado: <%= resultado %></div>
    <% } %>
    <% if (typeof error !== 'undefined') { %>
      <div class="result" style="color:red;">Error: <%= error %></div>
    <% } %>
  </div>
</body>
</html>
